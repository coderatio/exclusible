{
  "name": "exchange-rate-api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node ace serve --watch",
    "build": "node ace build --production",
    "start": "node server.js",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "test": "jest --bail --verbose --silent",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage"
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.9.3",
    "@japa/preset-adonis": "^1.2.0",
    "@japa/runner": "^2.2.2",
    "@types/jest": "^29.2.0",
    "adonis-jest": "^4.0.0",
    "adonis-preset-ts": "^2.1.0",
    "eslint": "8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.2.2",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.7.1",
    "redis-mock": "^0.56.3",
    "ts-jest": "^29.0.3",
    "typescript": "^4.6.4",
    "youch": "^3.2.2",
    "youch-terminal": "^2.1.5"
  },
  "dependencies": {
    "@adonisjs/core": "^5.8.8",
    "@adonisjs/redis": "^7.3.1",
    "@adonisjs/repl": "^3.1.11",
    "ioredis": "^5.2.3",
    "ioredis-mock": "^8.2.2",
    "node-kraken-api": "^2.2.2",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21"
  }
}
